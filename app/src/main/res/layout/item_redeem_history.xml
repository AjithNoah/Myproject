<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlHome"
        android:layout_margin="@dimen/_10sdp"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imgBrandLogo"
            android:src="@drawable/android_default"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/llAmount"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toRightOf="@+id/imgBrandLogo"
            android:orientation="vertical">

            <com.reward.dne.utils.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/textBrandName"
                android:textColor="@color/black"
                />
            <com.reward.dne.utils.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textMbl"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                />

            <com.reward.dne.utils.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/textOrderId"
                android:textSize="14sp"
                android:textColor="@color/lightgrey"
                />

            <com.reward.dne.utils.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="August29,2019 10.58 am"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/textDate"
                android:textSize="14sp"
                android:textColor="@color/lightgrey"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llAmount"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <com.reward.dne.utils.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/textAmount"
                android:textColor="@color/colorPrimary"
                />
            <com.reward.dne.utils.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textStatus"
                android:textSize="14sp"
                android:textColor="@color/lightgrey"
                />


        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/rlHome"
        android:background="@color/greyline"
        />

</RelativeLayout>