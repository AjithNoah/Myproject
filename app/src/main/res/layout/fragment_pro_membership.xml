<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProMembershipFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_30sdp"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imgMemCard"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/membercard"
            />
        <com.reward.dne.utils.CustomTextViewNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/textSubscribe"
            android:layout_below="@+id/imgMemCard"
            android:textColor="@color/black"
            android:text="Subscribe to our Premium membership and get unlimited excited offers and earn more"
            />

        <com.reward.dne.utils.CustomTextViewSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textSubscribe"
            android:textColor="@color/colorPrimary"
            android:text="1 Year Subscription"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:hapticFeedbackEnabled="true"
        android:id="@+id/relativeLoginNav"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_55sdp"
        android:layout_below="@+id/relativeEdit"
        android:background="@drawable/curve_orange">

        <com.reward.dne.utils.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe Now"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            />

    </RelativeLayout>



</RelativeLayout>